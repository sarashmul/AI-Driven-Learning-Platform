# Application Settings
APP_NAME="AI-Driven Learning Platform"
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/learning_platform

# JWT Authentication
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service (Choose one)
# For OpenAI GPT
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# For Google Gemini (Alternative)
GEMINI_API_KEY=your-google-gemini-api-key-here

# CORS Settings (Add your frontend URLs)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# PostgreSQL (for Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=learning_platform
